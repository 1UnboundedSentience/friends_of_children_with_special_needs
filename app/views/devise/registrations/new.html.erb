<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Parent Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => user_registration_path(), html: { role: "form" }) do |f| %>
    <%= f.fields_for :people do |people_form| %>
     <div class="form-group">
      <%= people_form.label :First_Name %>
      <%= people_form.text_field :first_name,autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= people_form.label :Last_Name %>
      <%= people_form.text_field :last_name, class: "form-control" %>
      </div>
    <% end %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.fields_for :people do |people_form| %>
      <div class="form-group">
      <%= people_form.label :Address_1%>
      <%= people_form.text_field :address_line_1, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= people_form.label :Address_2 %>
      <%= people_form.text_field :address_line_2, class: "form-control" %>
      </div>
       <div class="form-group">
      <%= people_form.label :City %>
      <%= people_form.text_field :city, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= people_form.label :State %>
      <%= people_form.text_field :state, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= people_form.label :Postal_Code %>
      <%= people_form.number_field :postal_code, class: "form-control" %>
      </div>
     <div class="form-group">
      <%= people_form.label :Home_Phone%>
      <%= people_form.telephone_field :home_phone, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= people_form.label :Work_Phone %>
      <%= people_form.telephone_field :work_phone, class: "form-control" %>
      </div>
       <div class="form-group">
      <%= people_form.label :Cell_Phone %>
      <%= people_form.telephone_field :cell_phone, class: "form-control" %>
      </div>
    <% end %>
      <%= f.submit t('.sign_up', :default => "Parent Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>