<div class="row">
  <div class="col-sm-4">
   <h3 class='pull-left'>Student List</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">

    <div class="panel panel-info">

      <div class="panel-heading">
        <div class="panel-title">

        </div>
      </div>

      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <thead>
            <th>
              Name
            </th>
            <th>
              Birthdate
            </th>
            <th>
              Gender
            </th>
            <th>
              One on One Aide?
            </th>
            <th>
              Behavior Intervention Plan?
            </th>
            <th>
              Add Contact?
            </th>
          </thead>

          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td> </td>
                <td><%= student.birthday %></td>
                <td><%= student.gender %></td>
                <td><%= student.one_on_one_aide %></td>
                <td><%= student.behavior_intervention_plan %></td>
                <td>
                <%= link_to "Add", new_student_contact_path(:student_id => student.id),
                    class: "button btn-sm btn-info" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-1">
    <%= link_to "Parent_Info", person_path(current_user), class: "button btn-sm btn-info" %>
  </div>
  <div class="col-sm-1">
    <%= link_to "Contacts", student_contacts_path, class: "button btn-sm btn-info" %>
  </div>
  <div class="col-sm-1">
    <%= link_to "Add_Student", new_student_path, class: "button btn-sm btn-info" %>
  </div>
</div>