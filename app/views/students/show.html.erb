<div class="row">
  <div class="col-sm-4">
   <h3 class='pull-left'>Student Information</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-7">
    
    <div class="panel panel-info">
      
      <div class="panel-heading">
        <div class="panel-title">
          <strong><%= link_to "#{@person.first_name} #{@person.last_name}", edit_student_path(@student) %></strong>
        </div>
      </div>

      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <tbody> 
            <tr>
              <td>Birthdate</td>
              <td><%= @student.birthday %></td>
            </tr>
            <tr>
              <td>Gender</td>
              <td><%= @student.gender %></td>
            </tr>
            <tr>
              <td>Allergies</td>
              <td><%= @student.allergies %></td>
            </tr>
            <tr>
              <td>Diagnosis</td>
              <td><%= @student.diagnosis %></td>
            </tr>
            <tr>
              <td>Behavior Intervention Plan</td>
              <td><%= @student.behavior_intervention_plan %></td>
            </tr>
            <tr>
              <td>One on One Aide?</td>
              <td><%= @student.one_on_one_aide %></td>
            </tr>            
            <tr>
              <td>Talents</td>
              <td><%= @student.talents %></td>
            </tr>
            <tr>
              <td>Comment</td>
              <td><%= @student.comment %></td>
            </tr>
          </tbody>
        </table>  
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-1">
    <%= link_to "Parent_Info", person_path(current_user), class: "button btn-sm btn-info" %>
  </div> 
  <div class="col-sm-1">
    <%= link_to "Contacts", student_contacts_path, :student_id => @student.id, class: "button btn-sm btn-info" %>
  </div>
  <div class="col-sm-1">
    <%= link_to "Edit_Student", edit_student_path(@student), class: "button btn-sm btn-info" %>
  </div>
  <div class="col-sm-1">
    <%= link_to "Add_Student", new_student_path, class: "button btn-sm btn-info" %>
  </div>
  <div class="col-sm-1">  
    <%= link_to "All_Students", students_path, class: "button btn-sm btn-info" %> 
  </div>
</div>