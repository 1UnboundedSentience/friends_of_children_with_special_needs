<h1> Confirm Class Selections for <%= current_student.name %> </h1>

<table id="courses" class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Course Name</th>
    <th>Location</th>
    <th>Instructor</th>
    <th>Fees</th>
    <th>Course Dates</th>
    <th>Course Times</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><% button_tag type: :submit, id: 'add_to_cart_button' %> </td>
        <td><%= course.name %></td>
        <td><%= course.location %></td>
        <td><%= course.instructor_name %></td>
        <td><%= humanize_money_from_cents(course.fees_in_cents) %></td>
        <td><%= humanize_course_dates(course) %></td>
        <td><%= humanize_course_times(course) %></td>
      </tr>
  <% end %>

  <%= form_for(@registration) do |f| %>
      <%= f.text_area :description, :size => "200x10" %>
      <p><%= f.submit "Reply!" %></p>
  <% end %>

  </tbody>
</table>