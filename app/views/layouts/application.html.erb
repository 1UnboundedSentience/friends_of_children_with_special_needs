<!DOCTYPE html>
<html>
	<head>
	  <title>FriendsOfChildrenWithSpecialNeeds</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
	    <div class="container-fluid">
	      <!-- Brand and toggle get grouped for better mobile display -->
	      <div class="navbar-header">
	      	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        	<span class="sr-only">Toggle navigation</span>
	       		<span class="icon-bar"></span>
	        	<span class="icon-bar"></span>
	        	<span class="icon-bar"></span>
      		</button>
	        <a class="navbar-brand" href="/"><%= image_tag "FCSN_Logo_transparent.gif", :height => "100%" %></a>
	      </div>

	      <!-- Collect the nav links, forms, and other content for toggling -->
	      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

	        <ul class="nav navbar-nav">
	          <li class="active"><%= link_to 'Home', root_path %></li>
	          <li class="active"><%= link_to 'Select Classes', registrations_path %></li>
	          
	          <!-- Shopping basket icon -->
	          <li class="active">
	          	<%= link_to root_path do %>
	          		<!-- Replace '0' with the counter of selected classes -->
	          		<%= fa_icon "shopping-basket" %> 0
	          	<% end %>
	          </li>
	        </ul>
	        
					<ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
	            <li><%= link_to 'Profile Info', root_path %></li>
	            <li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
	        <% else %>
	            <li><%= link_to 'Sign In', new_user_session_path %>
	        <% end %>
	        </ul>
	      </div><!-- /.navbar-collapse -->
	    </div><!-- /.container-fluid -->
    </nav>

		<div class = 'container'>
	    <% unless notice.nil? %>
	      <div class="alert alert-success" role="alert"><p class="notice"><%= notice %></p></div>
	    <% end %>
	    <% unless alert.nil? %>
	      <div class="alert alert-danger" role="alert"><p class="notice"><%= alert %></p></div>
	    <% end %>

	    <%= yield %>
	  </div>
	</body>
</html>